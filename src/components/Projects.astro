---
// src/components/FeaturedProjects.astro
// import ArrowRight from "lucide-react/icons/arrow-right";
import ProjectCard from "./ProjectCard.astro";

// Project data could be imported or defined here
const featuredProjects = [
  {
    title: "Result Monad",
    description: "TypeScript implementation of the Result monad pattern",
    tags: ["TypeScript", "Monad", "Error Handling"],
    githubUrl: "https://github.com/szymdzum/ts-result-monad",
    demoUrl: "https://demo-url.com",
  },
  {
    title: "Markdown Blog Engine",
    description:
      "A static site generator for markdown-based blogs with code syntax highlighting",
    tags: ["JavaScript", "Node.js", "Markdown"],
    githubUrl: "https://github.com/username/markdown-blog",
  },
  {
    title: "CLI Task Manager",
    description:
      "A command-line interface for managing tasks and projects with Git integration",
    tags: ["Rust", "CLI", "Productivity"],
    githubUrl: "https://github.com/username/cli-task-manager",
  },
];
---

<section class="featured-projects">
  <div class="header">
    <h2>Featured Projects</h2>
    <p>A selection of my recent coding repositories and projects</p>
  </div>

  <div class="projects-grid">
    {
      featuredProjects.map((project) => (
        <ProjectCard
          title={project.title}
          description={project.description}
          tags={project.tags}
          githubUrl={project.githubUrl}
          demoUrl={project.demoUrl}
        />
      ))
    }
  </div>

  <div class="view-all">
    <a href="/projects" class="button outline"> View All Projects </a>
  </div>
</section>

<style>
  .header {
    max-width: 980px;
    margin-inline: auto;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: var(--s1);
  }

  @media (min-width: 640px) {
    .header {
      align-items: center;
    }
  }

  .header h2 {
    font-size: var(--s2);
    font-weight: 700;
    line-height: 1.1;
    letter-spacing: -0.02em;
  }

  @media (min-width: 768px) {
    .header h2 {
      font-size: var(--s3);
    }
  }

  .header p {
    color: var(--color-muted);
  }

  @media (min-width: 768px) {
    .header p {
      font-size: var(--s1);
    }
  }

  .projects-grid {
    max-width: 64rem; /* 5xl */
    margin-inline: auto;
    margin-top: var(--s2);
    display: grid;
    gap: 1.5rem;
  }

  @media (min-width: 640px) {
    .projects-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .projects-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .view-all {
    margin-top: var(--s2);
    text-align: center;
  }

  .button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    height: var(--button-height);
    padding-inline: var(--s1);
    font-weight: 500;
    border-radius: var(--radius);
    text-decoration: none;
    white-space: nowrap;
    transition: all 0.2s ease;
  }

  .button.outline {
    background-color: transparent;
    color: inherit;
    border: 1px solid var(--color-border);
  }

  .button.outline:hover {
    background-color: rgba(var(--foreground-rgb), 0.05);
    border-color: var(--color-border-hover);
  }

  .icon {
    width: 1rem;
    height: 1rem;
    margin-left: 0.5rem;
  }
</style>
