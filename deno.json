{
  "imports": {
    "@deno/astro-adapter": "npm:@deno/astro-adapter"
  },
  "tasks": {
    "dev": "deno run -A npm:astro@5.6.1 dev",
    "build": "deno run -A npm:astro@5.6.1 build",
    "preview": "deno run -A npm:astro@5.6.1 preview"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 180,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve",
    "exclude": [
      "dist",
      "*.md"
    ]
  },
  "nodeModulesDir": "auto"
}