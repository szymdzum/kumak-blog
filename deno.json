{
  "imports": {
    "@deno/astro-adapter": "npm:@deno/astro-adapter"
  },
  "tasks": {
    "dev": "deno run -A npm:astro@5.7.0 dev",
    "build": "deno run -A npm:astro@5.7.0 build",
    "preview": "deno run -A npm:astro@5.7.0 preview",
    "lint": "deno lint",
    "format": "deno fmt",
    "check": "deno lint && deno fmt",
    "check-all": "deno run -A npm:astro@5.7.0 check && deno lint && deno fmt"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 180,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve",
    "exclude": [
      "dist",
      "*.md"
    ]
  },
  "nodeModulesDir": "auto"
}
