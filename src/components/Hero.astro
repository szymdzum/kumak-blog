---
// src/components/HeroSection.astro
// import GridBackground from "../components/GridBackground.astro";
// import ArrowRight from "lucide-react/icons/arrow-right";
import Button from "./Button.astro";
---

<section class="hero">
  <div class="container">
    <h1>
      Crafting <span class="accent">elegant code</span> and sharing development insights
    </h1>
    <p>
      A minimalist portfolio and blog focused on software development, coding
      repositories, and technical insights.
    </p>
    <div class="actions center">
      <Button href="/projects" variant="primary">View Projects</Button>
      <Button href="/blog" variant="secondary">Read Blog</Button>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    overflow: hidden;
    padding-block: var(--s3);
  }

  .container {
    position: relative;
    z-index: 10;
    margin-inline: auto;
    padding-inline: var(--s1);
    text-align: center;
    max-width: 65ch;
  }

  .actions {
    display: flex;
    gap: var(--s1);
    margin-top: var(--s2);
  }

  .actions.center {
    justify-content: center;
  }

  .icon {
    width: 1rem;
    height: 1rem;
    margin-left: 0.5rem;
  }
</style>
