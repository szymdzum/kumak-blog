  } */

  /* .hero-content h1:hover {
    transform: scale(1.02);
  } */

  .tagline {
    color: var(--color-muted);
    max-width: 40ch;
    font-size: 1.2rem;
    background-color: rgba(0, 0, 0, 0.6);
    padding: 0.75rem 1.25rem;
    border-radius: 4px;
    backdrop-filter: blur(8px);
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
  }

  @media (min-width: 640px) {
    .hero-content {
      align-items: center;
      text-align: center;
    }
  }
</style>
