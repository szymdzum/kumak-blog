---
// Import the global.css file here so that it is included on
// all pages through the use of the <BaseHead /> component.
import "@styles/main.css";
import DocumentHead from "@components/head/DocumentHead.astro";
import SeoTags from "@components/head/SeoTags.astro";
import SocialTags from "@components/head/SocialTags.astro";
import ResourceLinks from "@components/head/ResourceLinks.astro";

interface Props {
  title: string;
  description: string;
  image?: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const { title, description, image = "/blog-placeholder-1.jpg" } = Astro.props;
---

<DocumentHead />
<SeoTags title={title} description={description} canonicalURL={canonicalURL} />
<SocialTags title={title} description={description} image={image} />
<ResourceLinks />
