---
import { Image } from "astro:assets";

interface Props {
  src: string;
  alt: string;
}

const { src, alt = "" } = Astro.props;
---

<div class="hero-image">
  {
    src && (
      <Image
        src={src}
        width={1020}
        height={510}
        alt={alt}
        class="hero-img"
        format="webp"
      />
    )
  }
</div>

<style>
  .hero-image {
    margin-bottom: 2rem;
    border-radius: 0.5rem;
    overflow: hidden;
  }
</style>
