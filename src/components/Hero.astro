---
import { siteConfig } from "@/site-config";
---

<section class="hero">
  <div class="hero-content">
    <h1>{siteConfig.name}</h1>
    <p class="tagline">{siteConfig.tagline}</p>
  </div>
</section>

<style>
  .hero {
    width: 100%;
    padding: var(--s4) var(--s1);
    margin-bottom: var(--s3);
    background: linear-gradient(
      to bottom right,
      rgba(var(--foreground-rgb), 0.05),
      transparent
    );
  }

  .hero-content {
    max-width: 980px;
    margin-inline: auto;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: var(--s1);
  }

  h1 {
    font-size: var(--s3);
    font-weight: 800;
    line-height: 1.1;
    letter-spacing: -0.03em;
  }

  .hero .tagline {
    font-size: var(--s1);
    color: var(--color-muted);
    max-width: 40ch;
  }

  @media (min-width: 640px) {
    .hero-content {
      align-items: center;
      text-align: center;
    }
  }

  @media (min-width: 768px) {
    .hero {
      padding: var(--s5) var(--s1);
    }

    .hero h1 {
      font-size: var(--s4);
    }

    .hero .tagline {
      font-size: var(--s2);
    }
  }
</style>
