---
import { siteConfig } from "@/site-config";
import AncientSymbols from "./AncientSymbols.astro";
import GridBackground from "./GridBackground.astro";
---

<div class="hero-container">
  <section class="hero">
    <GridBackground />
    <div class="hero-content">
      <h1>{siteConfig.name}</h1>
      <p class="tagline">{siteConfig.tagline}</p>
    </div>
  </section>
  <AncientSymbols />
</div>

<style>
  .hero {
    width: 100%;
    position: relative;
    /* Use proportional value for height, fallback to 70vh if needed */
    height: var(
      --hero-height,
      70vh
    ); /* --hero-height can be set globally for consistency */
    overflow: hidden;
  }

  .hero-content {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    margin-top: var(--s4);
  }

  .tagline {
    color: var(--color-muted);
    max-width: var(--measure, 40ch); /* Use --measure for readable text width */
    font-size: var(
      --font-size-lg,
      1.25rem
    ); /* Use modular scale, fallback to 1.25rem */
  }

  @media (min-width: 640px) {
    .hero-content {
      align-items: center;
      text-align: center;
    }
  }
</style>
