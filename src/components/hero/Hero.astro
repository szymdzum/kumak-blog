    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 1) 0%,
      rgba(230, 230, 230, 0.95) 50%,
      rgba(200, 200, 200, 0.9) 100%
    );
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;

    letter-spacing: -0.02em;
