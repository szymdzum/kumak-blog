---
import { siteConfig } from "@/site-config";
---

<nav aria-label="Main navigation">
  <ul role="menubar">
    {
      siteConfig.navItems.map(({ href, title }) => (
        <li role="none">
          <a
            href={href}
            role="menuitem"
            aria-current={Astro.url.pathname === href ? "page" : undefined}
          >
            {title}
          </a>
        </li>
      ))
    }
  </ul>
</nav>

<style>
  nav {
    display: flex;
  }

  ul {
    display: flex;
    gap: var(--s1);
    list-style: none;
    margin: 0;
    padding: 0;
  }

  li {
    position: relative;
  }

  a {
    display: inline-flex;
    align-items: center;
    padding: var(--s-1) 0;
    color: var(--color-text);
    font-weight: var(--font-weight-medium);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  a:hover {
    color: var(--color-primary);
  }

  a:focus-visible {
    outline: 2px solid var(--color-primary);
    outline-offset: 3px;
  }

  a[aria-current="page"] {
    color: var(--color-primary);
  }

  a[aria-current="page"]::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 2px;
    background-color: var(--color-primary);
  }
</style>
