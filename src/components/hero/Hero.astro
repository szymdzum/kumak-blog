---
import { siteConfig } from "@/site-config";
import AncientSymbols from "./AncientSymbols.astro";
import GridBackground from "./GridBackground.astro";
---

<section class="hero">
  <GridBackground />
  <div class="hero-content">
    <h1>{siteConfig.name}</h1>
    <AncientSymbols />
    <!-- <p class="tagline">{siteConfig.tagline}</p> -->
  </div>
</section>

<style>
  .hero {
    width: 100%;
    position: relative;
    height: 70vh; /* Reduced from 120vh */
    padding-top: var(--s4);
    margin-bottom: var(--s3);
    overflow: hidden;
    border-bottom: 1px solid rgba(171, 160, 160, 0.887);
  }

  .hero-content {
    display: flex;
    margin-inline: auto;
    width: 100%;
    flex-direction: column;
    align-items: flex-start;
    position: relative;
    z-index: 1;
  }

