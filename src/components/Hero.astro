---
import { siteConfig } from "@/site-config";
---

<section class="hero">
  <div class="perspective-grid">
    <svg
      id="grid"
      viewBox="0 0 1000 800"
      xmlns="http://www.w3.org/2000/svg"
      width="100%"
      height="100%"
      preserveAspectRatio="xMidYMid slice"
    >
      <!-- Background -->
      <rect width="1000" height="800" fill="#000000"></rect>

      <!-- Perspective Grid -->
      <g stroke="#FFFFFF" stroke-width="1.8">
        <!-- Horizontal Lines -->
        <line x1="0" y1="200" x2="1000" y2="200"></line>
        <line x1="0" y1="400" x2="1000" y2="400"></line>
        <line x1="0" y1="600" x2="1000" y2="600"></line>

        <!-- Vertical Lines -->
        <line x1="200" y1="0" x2="200" y2="800"></line>
        <line x1="400" y1="0" x2="400" y2="800"></line>
        <line x1="600" y1="0" x2="600" y2="800"></line>
        <line x1="800" y1="0" x2="800" y2="800"></line>

        <!-- Perspective Lines from Center -->
        <line x1="500" y1="400" x2="0" y2="0"></line>
        <line x1="500" y1="400" x2="1000" y2="0"></line>
        <line x1="500" y1="400" x2="0" y2="800"></line>
        <line x1="500" y1="400" x2="1000" y2="800"></line>
        <line x1="500" y1="400" x2="0" y2="400"></line>
        <line x1="500" y1="400" x2="1000" y2="400"></line>
        <line x1="500" y1="400" x2="500" y2="0"></line>
        <line x1="500" y1="400" x2="500" y2="800"></line>

        <!-- Inner Rectangles -->
        <rect id="rect1" x="250" y="200" width="500" height="400" fill="none"
        ></rect>
        <rect id="rect2" x="350" y="300" width="300" height="200" fill="none"
        ></rect>
      </g>
    </svg>
  </div>
  <div class="hero-content">
    <h1>{siteConfig.name}</h1>
    <div class="ancient-symbols">
      <div class="symbol">
        <svg viewBox="0 0 40 40" xmlns="http://www.w3.org/2000/svg">
          <circle
            cx="20"
            cy="20"
            r="18"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"></circle>
          <path d="M20 2 L20 38" stroke="currentColor" stroke-width="1.5"
          ></path>
          <path d="M2 20 L38 20" stroke="currentColor" stroke-width="1.5"
          ></path>
          <circle
            cx="20"
            cy="20"
            r="5"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"></circle>
        </svg>
      </div>
      <div class="symbol">
        <svg viewBox="0 0 40 40" xmlns="http://www.w3.org/2000/svg">
          <polygon
            points="20,2 38,20 20,38 2,20"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"></polygon>
          <circle
            cx="20"
            cy="20"
            r="8"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"></circle>
          <path d="M12 12 L28 28" stroke="currentColor" stroke-width="1.5"
          ></path>
          <path d="M12 28 L28 12" stroke="currentColor" stroke-width="1.5"
          ></path>
        </svg>
      </div>
      <div class="symbol">
        <svg viewBox="0 0 40 40" xmlns="http://www.w3.org/2000/svg">
          <circle
            cx="20"
            cy="20"
            r="18"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"></circle>
          <path
            d="M20 2 C30 10, 30 30, 20 38"
            stroke="currentColor"
            stroke-width="1.5"
            fill="none"></path>
          <path
            d="M20 2 C10 10, 10 30, 20 38"
            stroke="currentColor"
            stroke-width="1.5"
            fill="none"></path>
          <circle
            cx="20"
            cy="12"
            r="3"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"></circle>
          <circle
            cx="20"
            cy="28"
            r="3"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"></circle>
        </svg>
      </div>
      <div class="symbol">
        <svg viewBox="0 0 40 40" xmlns="http://www.w3.org/2000/svg">
          <rect
            x="5"
            y="5"
            width="30"
            height="30"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"
            rx="2"></rect>
          <circle
            cx="20"
            cy="20"
            r="10"
            fill="none"
            stroke="currentColor"
            stroke-width="1.5"></circle>
          <path d="M10 10 L30 30" stroke="currentColor" stroke-width="1.5"
          ></path>
